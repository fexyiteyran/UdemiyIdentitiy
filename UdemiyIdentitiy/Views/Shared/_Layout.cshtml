                    <a asp-action="Index" asp-controller="Rol" class="list-group-item list-group-item-action">Rol işlemleri</a>
                    <a asp-action="UserList" asp-controller="Rol" class="list-group-item list-group-item-action">Kullanıcı İşlmleri</a>
