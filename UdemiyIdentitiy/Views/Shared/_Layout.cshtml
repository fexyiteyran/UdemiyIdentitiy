
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
</head>
<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">

                <div class="list-group">
                    <a asp-action="UpdateUser" asp-controller="Panel" class="list-group-item list-group-item-action ">
