@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <a asp-action="AddRole" asp-controller="Rol" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
    <table>

        <tr>


            <td>    Ad</td>
        </tr>

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>


                    <td> @item.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>


                <td> Kayıtlı rol bulunmamaktadır</td>
            </tr>
        }
        



    </table>

