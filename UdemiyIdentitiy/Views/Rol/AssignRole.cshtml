@model List<RoleAsignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form asp-action="AssignRole" class="w-75 mx-auto p-3" method="post">


        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
            <label class="form-check-label" for="@Model[i].Exist"> @Model[i].Name</label>
        </div>
        }



        <input type="submit" value="Kaydet" class="btn btn-info" />



    </form>

