@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="AddRole" asp-controller="Rol" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
<table class="table">

    <tr>

        <td>    İsim</td>
        <td>    Roller</td>
        <td>    Rol Ata</td>
        <td>    Claim Ata</td>

    </tr>

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
<tr>


    <td> @item.Name</td>
    <td> <rolGoster user-id="@item.Id"> </rolGoster> </td>

    <td>   <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a> </td>
    <td>  <a asp-action="AddClaim"  asp-route-id="@item.Id" asp-controller="Female" class="btn btn-warning btn-sm">Claim bayan Ata</a></td>
</tr>
      
       
       }
    }
    else
    {
        <tr>


            <td> Kayılı Rol Bulunmamaktadır</td>
        </tr>
    }




</table>


