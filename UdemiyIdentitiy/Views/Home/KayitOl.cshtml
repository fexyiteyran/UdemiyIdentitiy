@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KayitOl</title>
</head>
<body>


    <form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="KayitOl">
        <h4 class="text-center lead ">Kayı tOl</h4>
        <div class="form-group">
            <label asp-for="@Model.Name"> </label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <input asp-for="Name" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.SurName"> </label>
            <span asp-validation-for="@Model.SurName" class="text-danger"></span>
            <input asp-for="@Model.SurName" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.UserName"> </label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <input asp-for="@Model.UserName" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password"> </label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input asp-for="Password" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword"> </label>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <input asp-for="ConfirmPassword" value="" class="form-control" />
        </div>



        <div class="form-group">
            <label asp-for="@Model.Email"> </label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input asp-for="Email" value="" class="form-control" />
        </div>

        <div class="text-danger" asp-validation-summary="ModelOnly">   </div>

        <input type="submit" value="Kayot Ol Yap" class="btn btn-primary btn-sm" />
        <small>  Hesbınız  var mı?  <a asp-action="KayitOl" class="btn btn-link btn-sm">Giriş Yap</a></small>






    </form>








</body>
</html>
